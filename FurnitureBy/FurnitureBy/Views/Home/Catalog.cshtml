@using FurnitureBy.Domain.Enums;
@{
    ViewData["Title"] = "Каталог";
}

<h2>Каталог</h2>

<div class="text-center mt-4">
    <div class="row d-flex">
        <div class="col-6 mb-2 font-nikainley main-catalog-block">
            <a asp-action="Categories" asp-controller="Home" asp-route-mainCategoryId="@((int)MainCategoryEnum.Bads)">
                <img src="~/Images/Bads.png" alt="Кровати" class="p-1 main-catalog-image" />
            </a>
        </div>
        <div class="col-6 mb-2 font-nikainley main-catalog-block">
            <a asp-action="Categories" asp-controller="Home" asp-route-mainCategoryId="@((int)MainCategoryEnum.Sofas)">
                <img src="~/Images/Sofas.png" alt="Диваны" class="p-1 main-catalog-image" />
            </a>
        </div>
        <div class="col-6 font-nikainley main-catalog-block">
            <a asp-action="Categories" asp-controller="Home" asp-route-mainCategoryId="@((int)MainCategoryEnum.Closets)">
                <img src="~/Images/Closets.png" alt="Шкафы" class="p-1 main-catalog-image" />
            </a>
        </div>
        <div class="col-6 font-nikainley main-catalog-block">
            <a asp-action="Categories" asp-controller="Home" asp-route-mainCategoryId="@((int)MainCategoryEnum.Tables)">
                <img src="~/Images/Tables.png" alt="Столы и стулья" class="p-1 main-catalog-image" />
            </a>
        </div>
    </div>
</div>
