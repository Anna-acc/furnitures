@model FurnitureBy.Services.Models.UserDto;

@{
    var title = ViewBag.Mode == "Profile" ? "Личный кабинет" : "Редактирование пользователя";
    ViewData["Title"] = title;
}

@section Scripts {
    <script>
        $(function () {
            $("#changePasswordButton").click(function () { ChangePassword($("#Login").val(), $("#newPassword").val(), $("#confirmNewPassword").val()); });
    });
    </script>
}

<h2>@title</h2>

<form asp-action="@ViewBag.Mode" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Логин</label>
            <input type="text" readonly asp-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Телефон</label>
            <input asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Фамилия</label>
            <input asp-for="Surname" />
            <span asp-validation-for="Surname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Имя</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic">Отчество</label>
            <input asp-for="Patronymic" />
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateBirth">Дата рождения</label>
            <input asp-for="DateBirth" />
            <span asp-validation-for="DateBirth"></span>
        </div>
        @if (ViewBag.Mode == "Profile")
        {
            <input type="hidden" asp-for="RoleId" />
        }
        else
        {
            <div class="form-group">
                <label asp-for="RoleId">Роль</label>
                <select asp-for="RoleId" asp-items="ViewBag.Roles"></select>
            </div>

            <div class="form-group">
                <label asp-for="IsActive">Активность</label>
                <input asp-for="IsActive" />
            </div>
        }
        <input type="hidden" asp-for="Password" />
        <input type="hidden" asp-for="ConfirmPassword" value="@Model.Password" />
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Сохранить изменения" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

<div>
    <h3>Изменить пароль</h3>
    <div class="form-group">
        <label id="newPasswordLabel">Пароль</label>
        <input type="password" id="newPassword" />
    </div>
    <div class="form-group">
        <label id="confirmNewPasswordLabel">Подтверждение пароля</label>
        <input type="password" id="confirmNewPassword" />
    </div>
    <div class="form-group">
        <input id="changePasswordButton" type="button" value="Изменить пароль" class="btn btn-outline-dark" />
    </div>
</div>
