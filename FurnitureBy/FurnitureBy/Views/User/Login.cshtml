@model UserAuthModel

@{
    ViewData["Title"] = "Вход в систему";
}

<h2>Вход в систему</h2>


<form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="col-6">
        <div class="form-group d-flex">
            <div class="col-4">
                <label asp-for="Login" сlass="form-label">Логин</label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-4">
                <label asp-for="Password" сlass="form-label">Пароль</label>
            </div>
            <div class="col-8">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-primary mt-4" />
        </div>
    </div>
</form>