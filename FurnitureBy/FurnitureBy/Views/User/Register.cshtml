@model FurnitureBy.Services.Models.UserDto;

@{
    var title = ViewBag.Mode == "Add" ? "Добавление пользователя" : "Регистрация";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<form asp-action="@ViewBag.Mode" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Логин</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Подтверждение пароля</label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Телефон</label>
            <input asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Фамилия</label>
            <input asp-for="Surname" />
            <span asp-validation-for="Surname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Имя</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic">Отчество</label>
            <input asp-for="Patronymic" />
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateBirth">Дата рождения</label>
            <input asp-for="DateBirth" />
            <span asp-validation-for="DateBirth"></span>
        </div>
        @if (ViewBag.Mode == "Register")
        {
            <input hidden asp-for="RoleId" value="3" />
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-outline-dark" />
            </div>
        }
        else
        {
            <div class="form-group">
                <label asp-for="RoleId">Роль</label>
                <select asp-for="RoleId" asp-items="ViewBag.Roles" ></select>
            </div>

            <div class="form-group">
                <label asp-for="IsActive">Активность</label>
                <input asp-for="IsActive" />
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-dark" />
            </div>
        }
    </div>
</form> 
