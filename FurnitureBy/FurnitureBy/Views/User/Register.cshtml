@model FurnitureBy.Services.Models.UserDto;

@{
    var title = ViewBag.Mode == "Add" ? "Добавление пользователя" : "Регистрация";
    ViewData["Title"] = title;
}

<h2 class="mb-4">@title</h2>

<form asp-action="@ViewBag.Mode" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Login" class="form-label">Логин</label>
            </div>
            <div class="col-10">
                <input type="text" asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Password" class="form-label">Пароль</label>
            </div>
            <div class="col-10">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="ConfirmPassword" class="form-label">Подтверждение пароля</label>
            </div>
            <div class="col-10">
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Email" class="form-label">Email</label>
            </div>
            <div class="col-10">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Phone" class="form-label">Телефон</label>
            </div>
            <div class="col-10">
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Surname" class="form-label">Фамилия</label>
            </div>
            <div class="col-10">
                <input asp-for="Surname" class="form-control"/>
                <span asp-validation-for="Surname"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Name" class="form-label">Имя</label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="Patronymic" class="form-label">Отчество</label>
            </div>
            <div class="col-10">
                <input asp-for="Patronymic" class="form-control"/>
                <span asp-validation-for="Patronymic"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-2">
                <label asp-for="DateBirth" class="form-label">Дата рождения</label>
            </div>
            <div class="col-10">
                <input asp-for="DateBirth" class="form-control"/>
                <span asp-validation-for="DateBirth"></span>
            </div>
        </div>
        @if (ViewBag.Mode == "Register")
        {
            <input hidden asp-for="RoleId" value="3" />
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
            </div>
        }
        else
        {
            <div class="form-group d-flex">
                <div class="col-2">
                    <label asp-for="RoleId" class="form-label">Роль</label>
                </div>
                <div class="col-10">
                    <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control selectpicker"></select>
                </div>
            </div>

            <div class="form-group d-flex">
                <div class="col-2">
                    <label asp-for="IsActive" class="form-label">Активность</label>
                </div>
                <div class="col-10">
                    <input asp-for="IsActive"  class="form-control checkbox-item"/>
                </div>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="AllUsers" asp-controller="User" class="btn btn-primary ml-2">Назад</a>
            </div>
        }
    </div>
</form> 
